<h1>Boards#new</h1>

<% if @board.errors.any? %>
  <% @board.errors.full_messages.each do |message| %>
    <div> <%= message %> </div>
  <% end %>
<% end %>


<%= form_with model: @board do |f| %>
<div>
   <%= f.label :title %>
   <%= f.text_field :title %>
</div>
<div>
   <%= f.label :body %>
   <%= f.text_area :body %>
</div>
<div>
  <%= f.file_field :avatar %>
</div>
   <%= f.submit "create" %>


<% end %>

